<div class="contents row">
  <%= form_for(@job) do |f| %>
  <h3>
    募集を作成する
  </h3>
  <div class="field">
    <%= f.label :image, "募集画像" %><br>
    <%= f.file_field :image %> <!-- carrierwaveで画像をアップロード -->
  </div>

  <div class="field">
    <%= f.label :title, "タイトル" %><br>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :introduction, "活動概要" %><br>
    <%= f.text_area :introduction, :rows=>"10" %>
  </div>

  <div class="field">
    <%= f.label :description, "募集要項" %><br>
    <%= f.text_area :description, :rows=>"10" %>
  </div>

  <div class="field">
    <%= f.label :skill, "求めるスキル" %><br>
    <%= f.text_area :skill, :rows=>"10" %>
  </div>

  <div class="field">
    <%= f.label :genre_list, "仕事領域（専門）" %><br>
    <%= text_field_tag 'job[genre_list]', @job.genre_list.join(',') %>
  </div>

  <div class="field">
    <%= f.label :option_list, "業務形態（頻度・肩書き）" %><br>
    <%= text_field_tag 'job[option_list]', @job.option_list.join(',') %>
  </div>

  <%= f.submit "PUBLISH" %>
  <% end %>
</div>
