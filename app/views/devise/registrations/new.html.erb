<div class="contents row">
  <h2>Sign up</h2>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <label><%= f.radio_button  :status, :user %><em>個人</em>
      <%= f.radio_button  :status, :organization %><em>法人・団体</em></label>
      <br>
    </div>
    <br>

    <div class="field">
      <%= f.text_field :image, :placeholder => "image URL" %>
    </div>

    <div class="field">
      <%= f.text_field :name, autofocus: true, maxlength: "30", :placeholder => "name (30 characters maximum)" %>
    </div>

    <div class="field">
      <%= f.email_field :email, :placeholder => "email" %>
    </div>

    <div class="field">
    <%= f.text_field :address, :placeholder => "address(法人・団体のみ)" %>
    </div>

    <div class="field">
      <% if @validatable %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "off", :placeholder => "enter password" %>
    </div>

    <div class="field">
      <%= f.password_field :password_confirmation, autocomplete: "off", :placeholder => "password confirm" %>
    </div>
    <br>
    <div class="actions">
      <%= f.submit "Sign up" %>
    </div>
    <div class="action_signup" style="color: #fff;">
     <%= link_to "or Sign in", "/members/sign_in/" %>
   </div>
   <% end %>
 </div>

